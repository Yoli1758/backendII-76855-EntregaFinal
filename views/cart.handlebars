<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h2>üõí Carrito de Compras</h2>

    {{#if cart.products.length}}
    <table border="1" cellpadding="8" cellspacing="0" style="width:100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>T√≠tulo</th>
                <th>Precio unitario</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}}
            <tr>
                <td><img src="{{this.productId.thumbnails}}" alt="{{this.productId.title}}" width="60"></td>
                <td>
                    {{this.productId.title}}
                    {{#if this.productId.outOfStock}}
                    <span style="color:red;">(sin stock)</span>
                    {{/if}}
                </td>
                <td>${{this.productId.price}}</td>
                <td>
                    <form action="/cart/{{this.productId._id}}/decrement/" method="POST" style="display:inline;">
                        <button type="submit">‚ûñ</button>
                    </form>
                    {{this.quantity}}
                    <form action="/cart/{{this.productId._id}}/increment/" method="POST" style="display:inline;">
                        <button type="submit">‚ûï</button>
                    </form>
                </td>
                <td>${{multiply this.quantity this.productId.price}}</td>
                <td>
                    <button onclick="removeFromCart('{{this.productId._id}}')">‚ùå Eliminar</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <br>

    <!-- Resumen -->
    <h3>üìë Resumen de compra</h3>
    <table border="1" cellpadding="8" cellspacing="0" style="width:40%; border-collapse: collapse;">
        <tr>
            <td>Total art√≠culos</td>
            <td>
                {{reduceQuantities cart.products}}
            </td>
        </tr>
        <tr>
            <td>Precio total</td>
            <td>
                ${{calculateTotal cart.products}}
            </td>
        </tr>
    </table>

    <br>

    <button id="buyButton" onclick="GenerarCompra()">üí≥ Generar Compra</button>
    {{else}}
    <p>Tu carrito est√° vac√≠o.</p>
    {{/if}}

    {{#if rejectedProducts.length}}
    <h3 style="color:red;">‚ö†Ô∏è Productos sin stock</h3>
    <ul>
        {{#each rejectedProducts}}
        <li>{{this.title}} ‚Äî sin stock</li>
        {{/each}}
    </ul>
    {{/if}}



    <br>
    <a href="/">Volver</a>

    <script>
        async function removeFromCart(pid) {
            try {
                const response = await fetch(`/cart/${pid}`, {
                    method: "DELETE"
                });

                const data = await response.json();
                if (response.ok) {
                    Swal.fire("‚úÖ Eliminado", "Producto quitado del carrito", "success")
                        .then(() => location.reload());
                } else {
                    Swal.fire("‚ùå Error", data.error || "No se pudo eliminar", "error");
                }
            } catch (err) {
                Swal.fire("‚ùå Error", err.message, "error");
            }
        }


    </script>
    <script>
        window.GenerarCompra = async function () {
            try {
                const response = await fetch("/purchase", { method: "POST" });
                const data = await response.json();

                if (response.ok) {
                    Swal.fire("‚úÖ Compra realizada", "Se gener√≥ tu ticket correctamente", "success")
                        .then(() => location.reload());
                } else {
                    Swal.fire("‚ùå Error", data.error || "No se pudo generar la compra", "error");
                }
            } catch (err) {
                Swal.fire("‚ùå Error", err.message, "error");
            }
        };
    </script>

</body>


</html>